<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AdminPoruke</title>
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/1/15/Open-mid_central_rounded_vowel_%28vector%29.svg/1200px-Open-mid_central_rounded_vowel_%28vector%29.svg.png" />

    <!-- Latest compiled and minified CSS -->
    <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/stylesheets/admin.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
    <link rel="stylesheet" href="/stylesheets/predavac.css" />
</head>
<body>
<div class="container-fluid navbar">
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 nb"><a href="/users/logoutadmin">Logout</a></div>
        <div class="col-lg-6 col-md-3 col-sm-6 nb naslov">
            <a href="/" style="text-align: center; text-decoration: none; color: white">SLIDO</a>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6"></div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 style="text-align: center">Dobro došli admine</h1>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-12 col-md-7 col-lg-7">
            <h2 style="text-align: center">Lista svih poruka:</h2>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <td style="font-weight: bold">Tekst</td>
                            <td style="font-weight: bold">Broj odobravanja</td>
                            <td style="font-weight: bold">Odgovorena poruka</td>
                            <td style="font-weight: bold">Neodgovorena poruka</td>
                            <td style="font-weight: bold">Blokirana poruka</td>
                            <td style="font-weight: bold">Kod predavanja poruke</td>
                        </tr>
                    </thead>
                    <%for(let i = 0; i < poruke.length; i++){%>
                        <tr>
                            <td>
                                <%= poruke[i].tekst %>
                            </td>
                            <td>
                                <%= poruke[i].brojlajkova %>
                            </td>
                            <td>
                                <%= poruke[i].neodg %>
                            </td>
                            <td> <%=poruke[i].odg%> </td>
                            <td> <%=poruke[i].blok%> </td>
                            <td> <%=poruke[i].kod%> </td>
                        </tr>
                    <%}%>
                </table>
            </div>
        </div>
        <div class="col-sm-12 col-md-5 col-lg-5">
            <h2 style="text-align: center">Lista svih zabranjenih riječi:</h2>

            <div class="dugmeZaNovoPredavanje" style="text-align: center">
                <button
                        class="icon-btn add-btn"
                        onclick="document.getElementById('id01').style.display='block'"
                >
                    <div class="add-icon"></div>
                    <div class="btn-txt">Dodajte zabranjenu riječ</div>
                </button>
            </div>
            <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <td style="font-weight: bold; text-align: center">Nedozvoljene:</td>
                </tr>
                </thead>
                <%for(let i = 0; i < nedozvoljene.length; i++){%>
                    <tr>
                        <td style="text-align: center">
                            <%= nedozvoljene[i].rijec %>
                        </td>
                    </tr>
                <%}%>
            </table>
            </div>
        </div>
    </div>
</div>
<div id="id01" class="modal">

    <form
            class="modal-content animate"
            action="/users/zabranjenarijec"
            method="post"
    >
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
            <h2>Dodavanje zabranjene riječi:</h2>
        </div>
        <div class="container">
            <label for="naziv"><b>Unesite zabranjenu riječ:</b></label>
            <input
                    type="text"
                    placeholder="Unesite zabranjenu riječ:"
                    name="rijec"
                    required
            />
            <button class="spasi">Potvrdi</button>
        </div>
    </form>
</div>
<!-- JavaScript -->
<script>
    // Get the modal
    var modal = document.getElementById("id01");

    // kada korisnik klikne bilo gdje van modala, izaci iz njeg
    window.onclick = function (event) {
        if (event.target == modal) {
            modal.style.display = "none";
        }
    };
</script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/07758f63a4.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
</body>
</html>
